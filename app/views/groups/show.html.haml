.message
  .message__upper-info
    %p.messages__message__upper-info__talker
      = @messages.user.name
    %p.messages__message__upper-info__date
      = @messages.created_at.strftime("%Y年/%m月/%d日 %H時%M分")
  %p.messages__message__text
    - if @messages.content.present?
      %p.messages__message__text__content
        = @messages.content
    = image_tag @messages.image.url, class: 'lower-message__image' if @messages.image.present?

.form
  = form_for [@group,@message] do |f|
    .form__new_message
      .form__new_message__input-box
        = f.text_field :content, class: "form__new_message__input-box__text", placeholder: 'type a message'
        = f.label :image, class: "form__new_message__input-box__image" do
          = fa_icon 'picture-o'
          = f.file_field :image, class: "form__new_message__input-box__image__file"
      = f.submit 'Send', class: "form__new_message__submit-btn"