.main-right
  .check
    本人情報の編集
  .main_form
    = form_for [@user] do |f|
      .form_box
        プロフィール画像
        %span.free 任意
        = f.label :image do
          = f.file_field :image, class:"person-image"
          - if @user.image.present?
            = image_tag @user.image.url,class: "person", size: "188x188"
          - else
            = fa_icon 'user-circle',class: "person"
      .form_box
        = f.label "お名前"
        %span.abso 必須
        = f.text_field :name, class: 'form_box__input'
      = f.submit "登録する", class: "form_submit"
= render partial: "shared/footer"